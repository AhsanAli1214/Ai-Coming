{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "client/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "client/$1",
      "check": true
    },
    {
      "source": "/(.*)",
      "destination": "client/index.html"
    }
  ]
}
